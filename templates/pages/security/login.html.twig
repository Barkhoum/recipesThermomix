{% extends 'base.html.twig' %}

{% block title %}Espace connexion {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connexion
        </h1>
        {% if error %}
            <div class="alert alert-dismissible alert-danger mt-4">
               {{ error.messagekey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Votre Email</label>
                <input type="email" class="form-control" id="username" aria-describedby="emailHelp" name="_username" placeholder="renseigner votre Email" >
                <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email avec quelqu'un d'autre.</small>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe </label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="********">
            </div>
            <button type="submit" class="btn btn-primary mt-4">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
