{% extends 'base.html.twig' %}

{% block title %}Liste des recettes
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Recettes de la communauté</h1>

        {% if not recipes.items is same as([]) %}
        <div class="row justify-content-between">
            {% for recipe in recipes %}
                <div class='col-3'>

                    <div class="card mb-3">
                        <h3 class="card-header">Recette n°{{ recipe.id }}</h3>
                        <div class="card-body">
                            <h5 class="card-title">{{ recipe.name }}</h5>
                            <h6 class="card-subtitle text-muted">Traduction </h6>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%"
                             height="200" aria-label="Placeholder: Image cap" focusable="false" role="img"
                             preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180"
                             style="font-size:1.125rem;text-anchor:middle">
                            <rect width="100%" height="100%" fill="#868e96"></rect>
                            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                        </svg>
                        <div class="card-body">
                            <p class="card-text">{{ recipe.description|slice(0,100)~ '...' }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">x</li>
                            <li class="list-group-item">{{ recipe.difficulty }}</li>
                            <li class="list-group-item">{{ recipe.time }}</li>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link">Voir la recette</a>
                            <a href="#" class="card-link">Voir toutes les recette de la catégorie</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
